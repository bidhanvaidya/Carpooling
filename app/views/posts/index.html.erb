<div id="midcontainer">
	<%= form_tag posts_path, :class => 'well form-search', :method => :get do%>
  <div class= "row">
    <div class= "span3">
      <%= text_field_tag :start, params[:start], class: 'input-long search-query span3', placeholder: "From"%> 
     </div>
    <div class= "span3">
      <%= text_field_tag :finish, params[:finish], class: 'input-long search-query span3', placeholder: "To" %>
     </div>
    <div class= "span3">
      <%= submit_tag "Search Near", :name => nil %>
    </div>
   </div>  
<% end %>

<div class= "row">
<div class= "span6">Posts</div>
<div class= "span6" align = "right">
<%= link_to 'Make a new Post', new_post_path, :class => 'btn btn-primary' %></div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Starttime</th>
      <th>Start</th>
      <th>Finish</th>
      <th>Actions</th>
    </tr>
  </thead>

  <%if !@start_locations.nil?%>
   
    <%=render "search"%>
  
  <%else%>
     
 
  <tbody>
    <% @posts.each do |post| %>
      <a><tr>
        <td><%= post.id %></td>
        <td><%= link_to post.starttime, post_path(post) %></td>
        <td><%= post.start.city %></td>
        <td><%= post.finish.city %></td>
        <td>
          <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', post_path(post), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr></a>
</tbody>   
 <% end %>
  
  <%end%>
</table>






<%= link_to 'New', new_post_path, :class => 'btn btn-primary' %>
</div>
